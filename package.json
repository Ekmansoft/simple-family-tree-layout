{
  "name": "simple-family-tree-layout",
  "version": "0.2.21",
  "description": "A React layout model for genealogy family trees",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "lib/src/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "mocha -r ts-node/register tests/*.ts",
    "format": "prettier --write \"src/**/*.tsx\" ",
    "lint": "eslint --ext .tsx ./src/",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "genealogy",
    "tree",
    "family-tree"
  ],
  "author": "Kenneth Ekman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ekmansoft/simple-family-layout"
  },
  "dependencies": {
    "@types/react": "^18.0.16",
    "@types/react-dom": "^18.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "simple-family-tree-model": "^0.2.6"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/jest": "^28.1.6",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
